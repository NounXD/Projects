# Tabuada interativa com escolha de limite
while True:
    try:
        numero = int(input("Digite um número: "))
        limite = int(input("Até qual número deseja a tabuada? "))
    except ValueError:
        print("Por favor, digite apenas números inteiros.")
        continue

    for i in range(1, limite + 1):
        print(f"{numero} x {i} = {numero * i}")

    continuar = input("Deseja continuar? (s/n): ")
    if continuar.lower() != "s":
        break

print("Fim do programa!")



#Atualização da tabuada acima ^.

def ler_lista():
    numeros = input("Digite os números da lista separados por espaço: ")
    return [float(x) for x in numeros.split()]

def soma(l1, l2):
    return [a + b for a, b in zip(l1, l2)]

def subtracao(l1, l2):
    return [a - b for a, b in zip(l1, l2)]

def multiplicacao(l1, l2):
    return [a * b for a, b in zip(l1, l2)]

def divisao(l1, l2):
    return [a / b if b != 0 else None for a, b in zip(l1, l2)]

# Programa principal
print("=== Calculadora de Listas ===")
lista1 = ler_lista()
lista2 = ler_lista()

print("\nEscolha a operação:")
print("1 - Soma")
print("2 - Subtração")
print("3 - Multiplicação")
print("4 - Divisão")

op = input("Digite o número da operação: ")

if op == "1":
    resultado = soma(lista1, lista2)
elif op == "2":
    resultado = subtracao(lista1, lista2)
elif op == "3":
    resultado = multiplicacao(lista1, lista2)
elif op == "4":
    resultado = divisao(lista1, lista2)
else:
    resultado = "Opção inválida!"

print("\nResultado:", resultado)
