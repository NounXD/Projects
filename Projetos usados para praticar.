#Tabuada
while True:
  number = int(input("Digite um número para ver sua tabuada: "))
  if number == 0:
    break
  for tabuada in range(1, 11):
    print(f"{number} X {tabuada} = {number * tabuada}")
  print("Digite 0 para sair ou qualquer outro número para continuar a ver as tabuadas.")



#Soma de uma lista
while True:
  lista = input("Digite os numeros para somar a lista usando , para separar: ")
  soma = sum(int(num) for num in lista.split(","))
  print("A soma dos números é:", soma)
  #pergunta se o usuário quer continuar
  continuar = input("Deseja continuar? (s/n): ")
  if continuar.lower() != "s":
    print("Fim do programa.")
    break



#Remove números duplicados de uma lista
lista = [1,1,1,1,2,2,3,4,5]
remove_duplicados = list(set(lista))
print(remove_duplicados)

#Remove os duplicados e ordena a lista
lista = [1, 5,5,7,3,3,8,8,4,4]
remove_ordena = sorted(set(lista))
print(remove_ordena)

  


#Inversor de palavras
while True:
  palavra = input("Digite uma palavra: ")
  if palavra == 'sair':
    break
  print(palavra[::-1])
  print("Digite 'sair' para encerrar o programa.")
  



#Contador
while True:
  i = int(input("Digite um numero, para obter seu contador: "))
  for x in range(0, i + 1):
    print(x)
  
  continuar = input("Gostaria de continuar? (s/n): ")
  if continuar.lower() != "s":
    print("Fim do contador.")
    break 
  
  



#média de notas
lista_notas = int(input("Quantas notas você quer calcular?"))
notas = []
for i in range(lista_notas):
  notas.append(float(input("Digite a nota: ")))
  média = sum(notas) / lista_notas
  print("A média das notas é:", média)
  


#Conversor de temperatura celsius para Fahrenheit
while True:
  def celsius_to_farenheit(celsius):
   return celsius * 9.0 / 5 + 32

  celsius = float(input("Digite a temperatura em graus celsius: "))

  Farenheit = celsius_to_farenheit(celsius)

  print(f"{celsius} °C é igual a,{Farenheit}°F")

  continuar = input("Deseja continuar? (s/n): ")
  if continuar.lower() != "s":
   print("Fim do programa")
   break
  
  

#dicionario de alunos
while True:
  aluno = input("Digite o nome do aluno:")
  idade = int(input("Digite a idade do aluno:"))
  nota = float(input("Digite a nota do aluno:"))
  dicionário_aluno = {"nome": aluno, "idade": idade, "nota": nota}
  print(dicionário_aluno)
  
  continuar = input("Deseja continuar? (s/n): ")
  if continuar != "s":
    print("Fim do programa.")
    break

  
  

#função de área de um retângulo
def area_retangulo(base, altura):
  return base * altura
print(area_retangulo(3,4))

#função de área de um quadrado
def area_quadrado(lado):
  return lado * lado
print(area_quadrado(3))

#função de um triângulo
def area_triangulo(base, altura):
  return base * altura / 2
print(area_triangulo(3,4))
  
  

#função para maior número 
while True:
  a = int(input("Digite o primeiro número: "))
  b = int(input("Digite o segundo numero: "))
  c = int(input("Digite o terceiro numero: "))
  def maior_numero(a, b, c):
   return max(a, b, c)
  print("O maior número é:",           maior_numero(a, b, c))

  continuar = input("Continuar? (s/n) ")
  if continuar.lower() != "s":
    print("Fim do programa")
    break
    

  
  

  


  




  






  






  





  


  











